{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "commonjs",
    "types": ["jasmine"],
    "paths": {
      "app": ["./src/app"]
    }
  },
  "files": [
    "index.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
